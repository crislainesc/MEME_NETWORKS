{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@urls": ["src/urls"],
      "@services": ["src/services"],
    }
  },
  "include": ["src"],
  "exclude": ["build"]
}
